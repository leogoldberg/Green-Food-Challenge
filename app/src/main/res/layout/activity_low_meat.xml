<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activities.PlannerQuiz">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lowMeatTitle"
        android:textColor="@color/headerText"
        android:textStyle="bold"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textAlignment="center"
        android:text="@string/lowMeatQuestion"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title" />

    <SeekBar
        android:id="@+id/consumptionSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:progressTint="@color/headerText"
        android:thumbTint="@color/headerText"
        android:max="100"
        android:paddingTop="20dp"
        android:progress="50" />

    <TextView
        android:id="@+id/seekerDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50% of current meal"
        android:layout_margin="15dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"/>

    <Button
        android:id="@+id/submit"
        android:layout_marginTop="30dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/headerText"
        android:textColor="@android:color/white"
        android:text="Submit" />

</LinearLayout>