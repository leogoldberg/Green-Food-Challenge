<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".activities.AboutActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <View
        android:id="@+id/divider2"
        android:layout_width="345dp"
        android:layout_height="2dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="263dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="351dp"
        android:layout_height="108dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:text="This app is meant to help you track the Carbon footprint of your diet and calculate how much CO2 emission you can reduce by making a few dietary changes."
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="351dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/divider2"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="288dp"
        android:text="Credits"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="350dp"
        android:layout_height="130dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/divider2"
        android:layout_marginStart="2dp"
        android:layout_marginTop="9dp"
        android:text="Hong Nhung Nguyen - Product Owner\nJan Ycasas - Scrum Master\nMax Shvartsman - Team Member / Test Lead\nSeulgee Jang - Team Member / Test Lead\nLeo Goldberg - Git Repo Manager"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/divider2"
        android:layout_marginBottom="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Version: 3.0" />

    <Button
        android:id="@+id/learn_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="203dp"
        android:text="learn more" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true">
        <include
            android:id="@+id/navbar"
            layout="@layout/navbar" />
    </LinearLayout>

</RelativeLayout>