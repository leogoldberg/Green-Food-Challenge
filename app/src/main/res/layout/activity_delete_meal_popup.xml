<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/headerText"
    tools:context=".activities.DeleteMealPopup">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="300dp"
        android:layout_height="240dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/delete_meal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/cream"
            android:text="@string/deleteTitle"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/delete_are_you_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/cream"
            android:text="@string/areYouSure"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/no_button"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:backgroundTint="@color/headerText"
                android:text="NO"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/yes_button"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:text="YES"
                android:backgroundTint="@color/headerText"
                android:textColor="@color/cream" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>