<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activities.ConsumptionQuiz1">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Question 1:"
        android:textAlignment="center"
        android:textColor="@color/headerText"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_gravity="center"
        android:text="How much protein do you eat in a meal?"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/proteinSeekerBar"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:progressTint="@color/headerText"
            android:thumbTint="@color/headerText"
            android:max="220"
            android:paddingTop="20dp"
            android:progress="110"  />

        <TextView
            android:id="@+id/proteinGramsCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="110g"
            android:textColor="@android:color/black" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15dp"
        android:text="Average (110g)"
        android:textColor="@android:color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="How much vegetable do you eat in a meal?"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
            android:textAlignment="center" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <SeekBar
                android:id="@+id/vegSeekerBar"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:progressTint="@color/headerText"
                android:thumbTint="@color/headerText"
                android:max="220"
                android:paddingTop="11dp"
                android:progress="110"  />

            <TextView
                android:id="@+id/vegGramsCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="110g"
                android:textColor="@android:color/black" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:text="Average (110g)"
            android:textColor="@android:color/black"/>
        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:background="@color/headerText"
            android:text="NEXT"
            android:textStyle="bold"
            android:textColor="@android:color/white" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/navbar"
                layout="@layout/navbar" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>